<h3 class="text-center">Adding New Article</h3>


<div class="row">
  <div class="col-md-12">
    <%= form_for(@article, :html => {class: "form-horisontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :title %>
        </div>
        <div class="col-md-11">
          <%= f.text_field :title, class: "form-controll", placeholder: "Title of article", aoutofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :body %>
        </div>
        <div class="col-md-11">
          <%= f.text_field :body, rows: 10, class: "form-horisontal", placeholder: "Body of article" %>
        </div>
      </div>

      <div class="form-goup">
        <div class="col-md-offset-1 col-md-11">
           <%= f.submit class: "btn btn-primary btn-lg pull-right" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
